<div id="signin-form">
	<h3>Sign In</h3>
	<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	<p><%= f.label :email %> <%= f.email_field :email %></p>
	<p><%= f.label :password %> <%= f.password_field :password %></p>
	<% if devise_mapping.rememberable? %>
	<p><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
	<% end %>
	<%= f.submit "Sign in" %>
	<% end %>
	
	<%= link_to t(:create_a_new_account), signup_path %>
	<br />
	<%= link_to "Forgot your password?", new_user_password_path %>
	<br />
	<%= link_to "Didn't receive confirmation instructions?", new_user_confirmation_path %>
</div>