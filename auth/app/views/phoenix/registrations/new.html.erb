<div id="register">
	<h2>Sign Up</h2>
	<p class="grey">
		Already a member? <%= link_to "Sign In", login_path %>
	</p>
	<div id="form-register" class="">
		<div class="form-wrapper">
			<%= simple_form_for( resource, :as => resource_name, :url => registration_path(resource_name) ) do |f| %>
			<%= devise_error_messages!%>
				<div class="field">
					<div class="input-wrapper">
						<%= f.label :email, t(:email), :class => "input-placeholder" %>
  						<%= f.email_field :email, :class => "" %>
					</div>
				</div>
				<div class="field">
					<div class="input-wrapper">
						<%= f.label :name, t(:username), :class => "input-placeholder" %>
  						<%= f.text_field :name, :class => "" %>
					</div>
				</div>
				<div class="field">
					<div class="input-wrapper">
						<%= f.label :password, t(:password), :class => "input-placeholder" %>
  						<%= f.password_field :password, :class => "" %>
					</div>
				</div>
				<div class="field">
					<div class="input-wrapper">
						<%= f.label :password, t(:confirm_password), :class => "input-placeholder" %>
  						<%= f.password_field :password, :class => "" %>
					</div>
				</div>
				<div class="field">
					<%= f.button :submit, "Sign Up", :class => "btn"%>
				</div>
			<% end %>
		</div>
	</div>
</div>