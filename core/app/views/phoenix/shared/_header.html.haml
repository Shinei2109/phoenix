.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
        %span.icon-bar
        %span.icon-bar
      %a.brand{:href => "/"} Phoenix engine
      .nav-collapse
        %ul.nav.pull-right
          %li
            %a{:href => "https://github.com/lanvige/phoenix"} github
          %li
            %a{:href => "http://blog.lanvige.com/"} blog
          %li.divider-vertical
          - if current_user
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                = current_user.name.to_s
                %b.caret
              %ul.dropdown-menu
                %li
                  = link_to 'Setting', edit_user_registration_path
                %li
                  %a{:href => "#"} Contacts
                %li
                  = link_to 'Profile', edit_profile_path
                %li.divider
                %li
                  = link_to('Log out', logout_path, :method=>'delete')
          - else
            %li
              = link_to('sign up', signup_path)
            %li
              = link_to('log in', login_path)